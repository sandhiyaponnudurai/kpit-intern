/******************************************************************************
*                      Includes
******************************************************************************/
#include <stdio.h>
#include <stdlib.h>
/******************************************************************************
                                Main Function
******************************************************************************/
int main()
{
    unsigned int x= 0x12340055;
    char *c=(char *)&x;
    unsigned int y=0;
    if(*c==0x55)
    {
        printf("this is little endian architecture\n");
    }
    else
    {
        printf("this is big endian architecture\n");
    }
    printf("existing architecture is converted to another arhitecture\n");
    y|=((0x000000ff&x)<<24);
    y|=((0x0000ff00&x)<<8);
    y|=((0x00ff0000&x)>>8);
    y|=((0xff000000&x)>>24);
    printf("0x%x",y);
    return 0;
}
/******************************************************************************
*                      End of File
